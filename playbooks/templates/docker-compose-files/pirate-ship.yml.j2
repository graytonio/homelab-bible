version: "3.8"
services:
  vpn-net:
    image: qmcgaw/gluetun:v3.31
    container_name: vpn-net
    cap_add:
      - NET_ADMIN
    ports:
      - 9117:9117
      - 9091:9091
      - 51413:51413
      - 51413:51413/udp
      - 7878:7878
      - 8989:8989
    environment:
      - VPNSP=private internet access
      - REGION=$VPN_REGION
      - OPENVPN_USER=$USER
      - OPENVPN_PASSWORD=$PASSWORD
      - TZ=$TZ
    volumes:
      - vpn_config:/gluetun
    restart: always
  jackett:
    image: lscr.io/linuxserver/jackett:latest
    container_name: jackett
    network_mode: "service:vpn-net"
    depends_on:
      - vpn-net
    environment:
      - TZ=$TZ
    volumes:
      - jackett_config:/config
    restart: unless-stopped
  transmission:
    image: lscr.io/linuxserver/transmission:latest
    container_name: transmission
    network_mode: "service:vpn-net"
    depends_on:
      - vpn-net
    environment:
      - TZ=$TZ
    volumes:
      - transmission_config:/config
      - downloads:/downloads
    restart: unless-stopped
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    network_mode: "service:vpn-net"
    depends_on:
      - vpn-net
    environment:
      - TZ=$TZ
    volumes:
      - radarr_config:/config
      - downloads:/downloads
      - movies:/movies
    restart: unless-stopped
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    network_mode: "service:vpn-net"
    depends_on:
      - vpn-net
    environment:
      - TZ=$TZ
    volumes:
      - sonarr_config:/config
      - downloads:/downloads
      - tv:/tv
    restart: unless-stopped
  ombi:
    image: lscr.io/linuxserver/ombi:latest
    environment:
      - TZ=$TZ
    volumes:
      - ombi_config:/config
    ports:
      - "3579:3579"
    restart: unless-stopped

volumes:
  movies:
    driver_opts:
      type: "nfs"
      o: "addr=$NFS_HOST,nolock,soft,rw,nfsvers=3"
      device: ":$NFS_MOVIES_PATH"
  tv:
    driver_opts:
      type: "nfs"
      o: "addr=$NFS_HOST,nolock,soft,rw,nfsvers=3"
      device: ":$NFS_TV_PATH"
  downloads:
    driver_opts:
      type: "nfs"
      o: "addr=$NFS_HOST,nolock,soft,rw,nfsvers=3"
      device: ":$NFS_DOWNLOADS_PATH"
  vpn_config:
  jackett_config:
  transmission_config:
  sonarr_config:
  radarr_config:
  ombi_config: